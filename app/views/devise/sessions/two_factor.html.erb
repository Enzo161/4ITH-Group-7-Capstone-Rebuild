<body style="background-color:#2FB6E1;">
  <div class="position-absolute top-50 start-50 translate-middle card card" style=" width: 55%; height: auto;  background: #56C6EA; margin: 0 auto;">
    <div class="card-body">
      <img class=" rounded mx-auto d-block" src="<%= asset_path( 'logo.png' ) %>" alt="Card image cap" width="auto" height="100px">
      <br/>
      <br/>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>
        <%= f.input :otp_attempt, label: false, class:"form-control", placeholder:"OTP", autofocus: true %>
        
        <div class="text-center" >
          <i><p style="color:#D2042D;"><%= alert %></p></i>
        </div>

        <br/>

        <div class="actions text-center" style="width: auto; height: auto;">
          <%= f.submit "LOGIN", class:'btn btn-light .btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</body>