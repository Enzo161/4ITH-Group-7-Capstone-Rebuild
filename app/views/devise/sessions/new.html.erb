<body style="background-color:#2FB6E1;">
  <div class="position-absolute top-50 start-50 translate-middle card card" style=" width: 55%; height: auto;  background: #56C6EA; margin: 0 auto;">
    <div class="card-body">
      <img class=" rounded mx-auto d-block" src="<%= asset_path( 'logo.png' ) %>" alt="Card image cap" width="auto" height="100px">
      <br/>
      <br/>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group" style="margin:auto; width: 90%">
          <%= f.text_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
        </div>

        <br/>
        
        <div class="field form-group " style="margin:auto; width: 90%">
          <%= f.password_field :password, class:"form-control", placeholder:"Password", autocomplete: "current-password" %>
        </div>

        <br>

        <div class="container" style="text-align: center ; width: 93%;">

        <% if alert %>
          <div class="alert alert-danger alert-dismissible fade show container" role="alert" style="width: auto; height: auto; line-height:30px; margin-bottom: 1px; padding: 0px 15px;">
              <i><%= alert %></i>
              <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close" style="height: 10px; line-height:10px; margin-top: 10px; padding: 0px 15px;" ></button>
          </div>
        <% end %>
        <br>
          <% if devise_mapping.rememberable? %>
          <div class="row">
              <div class="col">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %> 
              </div>
              <div class="col">
              <%= render "devise/shared/links" %>
              </div>
          </div>
          <% end %>
        </div>

        <br/>

        <div class="actions text-center" style="width: auto; height: auto;">
          <%= f.submit "Login", class:'btn btn-light .btn-block', style: "width: 200px" %>
        </div>
      <% end %>
      <br/>
    </div>
  </div>
</body>