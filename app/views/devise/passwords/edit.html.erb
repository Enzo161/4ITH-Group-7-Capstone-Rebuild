<body style="background-image: 
      linear-gradient(to right, rgba(79,172,254,0.85), rgba(0,242,254,0.85)),
      url(/assets/bg.png);">
    <div class="position-absolute top-50 start-50 translate-middle card" style=" width: 55%; height: auto;  background: #56C6EA; margin: 0 auto;">
        <div class="card-body" style="margin-left: 20px; margin-right: 20px; margin-bottom: 20px; margin-top: 20px;">
            <img class=" rounded mx-auto d-block" src="<%= asset_path( 'logo.png' ) %>" alt="Card image cap" width="auto" height="100px">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <div style="margin-top: 10px;">
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>
            </div>
            <div class="field" style="margin-bottom: 13px; margin-top: 25px;">
                <% if @minimum_password_length %>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Enter new password" %>
            </div>
            <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", placeholder:"Confirm new password" %>
            </div>
            <br>
            <div class="actions " style="margin-bottom: 10px;">
                <div class="d-flex justify-content-between">
                    <%= f.submit "Change My Password", class:'btn btn-light .btn-block' %> &nbsp;
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
</body>