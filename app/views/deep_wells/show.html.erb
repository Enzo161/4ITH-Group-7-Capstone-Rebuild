<div class="container">

  <h2> <%= @deep_well.deep_well_name %> Information </h2>
  <p id="notice"><%= notice %></p>
   
  <!--Info. Table Start-->
  <table class="table table-hover table-bordered" style="">
    <tbody>
        <tr>
          <td>
            <p>
              <strong>NAME:</strong>
              <%= @deep_well.deep_well_name %>
            </p>
          </td>
          <td>
            <p>
              <strong>DATE GRANTED:</strong>
              <%= @deep_well.dateGranted %>
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <p>
              <strong>CLIENT NAME:</strong>
              <%= @deep_well.clientName %>
            </p>
          </td>
          <td>
            <p>
              <strong>WELL LOCATION:</strong>
              <%= @deep_well.wellLocation %>
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <p>
              <strong>WELL COORDINATES:</strong>
              <%= @deep_well.wellCoodinates %>
            </p>
          </td>
          <td>
            <p>
              <strong>WATER PERMIT NUMBER:</strong>
              <%= @deep_well.waterPermitNo %>
            </p>
          </td>         
        </tr>
        <tr>
          <td>
            <p>
              <strong>NAME OF CONTRACTOR:</strong>
              <%= @deep_well.contractor %>
            </p>
          </td>
          <td>
            <p>
              <strong>TOTAL DEPTH:</strong>
              <%= @deep_well.depthTotal %>
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <p>
              <strong>DATE OF UTVI:</strong>
              <%= @deep_well.dateofUTVI %>
            </p>
          </td>
          <td>
            <p>
              <strong>REASON:</strong>
              <%= @deep_well.reason %>
            </p>
          </td>
    </tbody>
  </table>
  <!-- Info. Table End-->

  <br>
    <h2> File Attachments </h2>
  <!-- Lithologic File Start-->
  <table class="table table-hover table-bordered ">
    <tbody>
      <tr>
        <td> <strong> Lithologic File </strong></td>
        <td> <strong> Date Uploaded </strong></td>
      </tr>
      <tr>
        <td>
          <% if @deep_well.log.attached? %>
            <p>
              <%= link_to @deep_well.log.filename, @deep_well.log, html_options = { target: "_blank"} if @deep_well.log.attached? %>
            </p>
          <% else %>
            <p>
              <i> File unavailable </i>
            </p>
          <% end %>
        </td>
        <td>
          <% if @deep_well.log.attached? %>
            <p>
              <%= @deep_well.log.created_at %>
            </p>
          <% else %>
            <p>
              -
            </p>
          <% end %>
        </td>

      </tr>
    </tbody>
  </table>
  <!-- Lithologic File End-->

  <!-- Asbuilt Files Start-->
  <table class="table table-hover table-bordered ">
    <thead>
        <tr>
          <th>  As-Built Design Files</th>
          <th>  Date Uploaded </th>
        </tr>
    </thead>
    <tbody>
        <% if !@deep_well.asbuilt.attached? %>
          <tr>
            <td> <i> File unavailable </i></td>
            <td> - </td>
          </tr>
        <% else %>
        <%@deep_well.asbuilt.each do |asbuilt|%>
          <tr>
            <td><%= link_to(asbuilt.filename, rails_blob_path(asbuilt),  target: '_blank') %></td>
            <td > <%= asbuilt.created_at %></td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
  </table>
  <!-- Asbuilt Files End-->

  <!-- Deepwell Design Proposal Start-->
  <table class="table table-hover table-bordered ">
    <thead>
        <tr>
          <th>  Deepwell Design Proposal Files</th>
          <th>  Date Uploaded </th>
        </tr>
    </thead>
    <tbody>
        <% if !@deep_well.design.attached? %>
          <tr>
            <td> <i> File unavailable </i> </td>
            <td> - </td>
          </tr>
        <% else %>
        <%@deep_well.design.each do |design|%>
          <tr>
            <td><%= link_to(design.filename, rails_blob_path(design),  target: '_blank') %></td>
            <td> <%= design.created_at %> </td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
  </table>
  <!-- Deepwell Design Proposal End-->


  <div style="float:right">

        <%= link_to 'Edit', edit_client_deep_well_path([@client, @deep_well]), class: "btn btn-primary" %> 
        <%= link_to 'Back', [@client, :deep_wells], class: "btn btn-light" %>

    <br>
  </div>
</div>