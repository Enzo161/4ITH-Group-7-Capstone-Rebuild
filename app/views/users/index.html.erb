<div class="container">
  <h1>User Management</h1>

  <!-- Search Start -->
  <div>
    <%= search_form_for @q do |f|%>
      <div class="row">
        <div class="col">
          <%= f.label :first_name_cont %>:
          <%= f.search_field :first_name_cont , placeholder: "Search First Name", class:'form-control' %>
          <%= f.label :email_cont %>:
          <%= f.search_field :email_cont , placeholder: "Search Email", class:'form-control' %>
        </div>
        <div class="col">
          <%= f.label :last_name_cont %>:
          <%= f.search_field :last_name_cont , placeholder: "Search Last Name", class:'form-control' %>
          <br>
          <%= link_to "Reset Search", request.path, class:"btn btn-light float-end" %>&nbsp;
          &nbsp;<%= f.submit "Search", class: 'btn btn-outline-primary float-end' %>&nbsp;
        </div>
      </div>
      <div>
        
      </div>
    <% end %>
  </div>   
  <!-- Search End -->

  <br>
  <%= link_to "User Invite", new_user_invitation_path, class:" btn btn-primary" %>
<br>
<br>
<table class="table table-hover table-bordered ">
  <thead>
    <tr>
      <th width="Auto"><%= sort_link(@q, :first_name, "Name", default_order: :asc)%></th>  <!-- Sorts through the names in alphabetical order-->
      <th width="Auto"><%= sort_link(@q, :email, "Email", default_order: :asc)%></th>
      <th width="Auto">Role</th>
      <th width="10%">Delete</th>
     <!--  <th scope="col" class="fa-solid fa-trash"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.first_name == nil || user.last_name == nil %>
            <p> Not set by user <p>
          <% else %>
            <p><%= user.first_name %> <%= user.last_name %></p>
          <% end %>
        </td>
        <td>
            <p><%= user.email %></p>
        </td>
        <td>
          <% if user.admin? %>
          Admin
          <% else %>
          User
          <% end %>
        <td>
          <% if current_user.email != user.email %>
            <%= link_to ' ', user, class:"fa-solid fa-trash", method: :delete, data: { confirm: 'Are you sure?' }  %>
          <% else %>
            Current Account
          <% end %>
        </td>
        <!--
        <td><%#= link_to 'resend invitation', resend_invitation_user_path(user), method: :patch %></td>
        <td><%#= link_to 'ban user', ban_user_path(user), method: :patch %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
