<div class="container">
  <h1>User Management</h1>

  <!-- Partial for Search Form-->
  <%= render 'users/search_form.html.erb'%>
<br>
<table class="table table-hover table-bordered ">
  <thead>
    <tr>
      <th width="Auto"><%= sort_link(@q, :first_name, "Name", default_order: :asc)%></th>  <!-- Sorts through the names in alphabetical order-->
      <th width="Auto"><%= sort_link(@q, :email, "Email", default_order: :asc)%></th>
      <th width="Auto">Role</th>
      <th width="10%">Delete</th>
     <!--  <th scope="col" class="fa-solid fa-trash"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.admin? %>
          Admin
          <% else %>
          User
          <% end %>
        <td>
          <% if current_user.email != user.email %>
            <%= link_to ' ', user, class:"fa-solid fa-trash", method: :delete, data: { confirm: 'Are you sure?' }  %>
          <% else %>
            Current Account
          <% end %>
        </td>
        <!--
        <td><%#= link_to 'resend invitation', resend_invitation_user_path(user), method: :patch %></td>
        <td><%#= link_to 'ban user', ban_user_path(user), method: :patch %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
<button type="button" class="btn btn-light text-right float-end" >
  <%= link_to "User Invite", new_user_invitation_path, class:"nav-link" %>
</button>
